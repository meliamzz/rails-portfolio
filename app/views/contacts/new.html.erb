<div class="contact">
  <div class="contact-form col-10 col-sm-8 col-md-6 col-lg-4 mx-auto">
    <h5 class="text-center">Contactez-moi</h5>
    <%= simple_form_for @contact do |f| %>
      <%= f.input :name, label: "Nom" %>
      <%= f.input :phone, label: "Numéro de téléphone" %>
      <%= f.input :email %>
      <%= f.input :message, label: "Votre message" %>
      <%= f.button :submit, "Envoyer!" %>
    <% end %>
  </div>
</div>
